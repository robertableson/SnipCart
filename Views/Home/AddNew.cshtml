@{
    ViewData["Title"] = "Add new";
}
<h2>Add a new product</h2>
 
<form class="form-add-product">
    <div class="form-group">
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Name">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Description">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Image url">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Price (ex: 97.99)">
    </div>
    <button class="btn btn-primary btn__add-product-btn">Add</button>
</form>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".btn__add-product-btn").click(function(e){
                /* $.get("/Home/CreateNewProduct", { name: "allo" }, function (data) {
                    alert("allo");
                });*/

                e.preventDefault();

                $.ajax({
                    url: "/Home/CreateNewProduct",
                    type: "GET",
                    datatype: 'json',
                    data: { name: "allo" },
                    success: function (data, status, jqXHR) {
                        $(".form-add-product").prepend(
                            '<div class="alert alert-success">' +
                                '<strong>Your product has been successfully created!</strong>' +
                            '</div>'
                        );
                    },
                    error: function (jqXHR, status, err) {
                        $(".form-add-product").prepend(
                            '<div class="alert alert-danger">' +
                                '<strong>An error has been detected in your request. Please try again.</strong>' +
                            '</div>'
                        );
                    },
                    complete: function (jqXHR, status) {
                        //alert("Local completion callback.");
                    }
                })
            });


        });
    </script>
}